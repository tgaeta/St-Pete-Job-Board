<%= bootstrap_form_for([@company, @job_post]) do |f| %>
  <%= f.alert_message "Please fix the following errors." %>
  <%= f.text_field :job_title, label: "Position Title *" %>
  <%= f.text_area :job_description, label: "Describe the Position *", help: "Minimum 100 characters" %>
  <%= f.text_field :job_tag, label: "Tag *", help: "Industry" %>
  <%= f.hidden_field :company_id %>
  <%= f.submit "Continue" %>
<% end %>

<br>
<%= link_to 'Go Home', root_path %>
