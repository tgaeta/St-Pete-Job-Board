<% if @jobs.blank? %>
  <p>'<%= "#{params[:search]}" %>' did not match any jobs in our database.</p>
<% else %>
  <% if !params[:search].blank? %>
    <% if @jobs.count == 1 %>
      <p>'<%= "#{params[:search]}" %>' returned <%= @jobs.count %> job.</p>
    <% else %>
      <p>'<%= "#{params[:search]}" %>' returned <%= @jobs.count %> jobs.</p>
    <% end %>
  <% end %>
    <% @jobs.each do |job| %>
      <div class="bs-callout bs-callout-primary">
        <h4><%= link_to job.job_title + " - " + job.company.name, company_job_post_path(job.company, job) %></h4>
        <h5 class="text-muted"><%= distance_of_time_in_words(job.created_at, Time.zone.now, include_seconds: true) %> ago</h5>
        <p><%= job.job_description.truncate(200).html_safe %>
        <p class="label label-info"><%= link_to "#{job.job_tag.upcase}", root_path(search: job.job_tag) %></p>
      </div>
    <% end %>
  <% end %>
<%= paginate @jobs %>
