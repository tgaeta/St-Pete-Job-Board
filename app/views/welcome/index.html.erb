<div id="home">
	<div id="menu" class="menu-right">
		<form class="menu-search" >
			<div class="form-group header">
				<i class="icon-search searchico"></i>
				<input type="text" placeholder="Blog Search">
				<a href="#" class="close-menu"><i class="icon-close"></i></a>
			</div>
		</form>
		<ul>
      <% if !signed_in? %>
      <li><%= link_to 'Sign Up to Post Job', new_company_path %></li>
      <% else %>
      <li><%= link_to 'Sign Out', session_sign_out_path, method: :delete %></li>
      <% end %>
      <li><%= link_to 'Home', root_path %></li>
			<li><%= link_to 'About', root_path %></li>
		</ul>
	</div>
	<div id="wrap">
		<div id="main-nav" class="">
			<div class="container">
				<div class="nav-header">
          <%= link_to "SPJB", root_path, class: "nav-brand" %>
						<a class="menu-link nav-icon" href="#"><i class="icon-menu2"></i></a>
					</div>
			</div>
		</div>
		<section id="hero" class="light-typo">
			<div id="cover-image" class="image-bg animated fadeIn"></div>
			<div class="container welcome-content">
				<div class="middle-text">
					<h1>ST. PETE JOB BOARD</h1>
					<h2>Get hired in The Burg.</h2>
          <%= link_to "Search Jobs", '#start', class: "btn smooth-scroll" %>
					<a class="btn btn-blog outline-orange" href="#" data-toggle="modal" data-target="#loginModal">Post A Job</a>
				</div>
			</div>
		</section>
		<div id="start" class="container content">
      <%= flash_messages %>
			<div class="row">
        <div class="col-md-8">
					<article class="clearfix">
						<div class="row">
							<%= form_tag root_path([@company, @job_post]), class: "col-md-12 myform", :method => 'get', id: 'ajax_search' do %>
								<div class="input-group">
									<%= text_field_tag :search, params[:search], class: "form-control input-lg", placeholder: "Search jobs..." %>
									<span class="input-group-btn">
										<button class="btn" name="submit" type="submit">
											<span class="input-group-btn">Search</span>
										</button>
									</span>
								</div>
			        <% end %>
						</div>
            <div id="jobs">
							<%= render 'jobs' %>
						</div>
					</article>
				</div>
				<div class="col-md-4">
          <div class="middle-text">
						<hh>Featured Tweets:</h2>
					</div>
        </div>
			</div><!-- end row -->
		</div>
			<footer>
				<div class="footer">
					<div class="container">
						<div class="row">
							<div class="col-sm-4 col-md-4 footer-widget">
								<h3>Statistics</h3>
								<div class="stats">
									<div class="line">
										<span class="counter"><%= @jobs.total_count %></span>
										<span class="caption">Jobs</span>
									</div>
									<div class="line">
										<span class="counter"><%= @companies.count %></span>
										<span class="caption">Companies</span>
									</div>
								</div>
							</div>
							<div class="col-sm-4 col-md-4 footer-widget">
                <h3>Recent Jobs</h3>
								<div class="post-recent-widget">
									<div class="row">
										<div class="col-sm-12">
											<div class="media">

												<div class="media-body">
													<h4 class="media-heading"><a href="post-video.html">But I've never been to the moon!</a></h4>
													<p class="post-date">may 10, 2014</p>
												</div>
											</div>
											<div class="media">

												<div class="media-body">
													<h4 class="media-heading"><a href="post-typography.html">We don't have a brig</a></h4>
													<p class="post-date">september 27, 2014</p>
												</div>
											</div>
											<div class="media">

												<div class="media-body">
													<h4 class="media-heading"><a href="post-image.html">Every other day it's food, food, food.</a></h4>
													<p class="post-date">april 2, 2014</p>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>

							<div class="col-sm-4 col-md-4 footer-widget clearfix">
								<h3>Placeholder</h3>
								<ul class="tags">
									<li><a href="#">Placholders</a></li>
									<li><a href="#">Placholders</a></li>
									<li><a href="#">Placholders</a></li>
									<li><a href="#">Placholders</a></li>
