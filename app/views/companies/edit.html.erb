<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <br>
    <%= link_to image_tag('SPJB.png', class: "img-responsive", id: 'logo2'),
                  root_path %>
    </div>
    <br>
  </div>
</nav>
<div class="container content">
  <div class="col-md-3">
    <div class="cards">
      <div class="card">
        <div class="card-header">
          Update Your Company Profile
        </div>
        <div class="card-copy">
          <p>Don't forget to add your logo for easier recognition.</p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <%= bootstrap_form_for @company, :html => {:multipart => true} do |f| %>
      <%= f.alert_message "Please fix the following errors." %>
      <%= f.text_field :name, label: "Company Name" %>
      <%= f.file_field :logo, label: "Company Logo", help: "Add your logo for easy recognition." %>
      <%= f.url_field :url, label: "Company Website", help: "e.g., http://www.google.com" %>
      <%= f.text_area :bio, label: "Company Bio" %>
      <%= f.submit "Update" %><%= link_to 'Go Home', root_path, class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>
