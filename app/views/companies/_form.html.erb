<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <br>
    <%= link_to image_tag('SPJB.png', class: "img-responsive", id: 'logo2'),
                  root_path %>
    </div>
    <br>
  </div>
</nav>
<div class="container content">
    <div class="col-md-3">
      <div class="cards">
        <div class="card">
          <div class="card-header">
            Register Your Company
          </div>
          <div class="card-copy">
            <p>Don't forget to add your logo for easier recognition.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <%= flash_messages %>
      <%= bootstrap_form_for @company, :html => {:multipart => true} do |f| %>
        <%= f.alert_message "Please fix the following errors." %>
        <%= f.text_field :name, label: "Company Name *" %>
        <%= f.email_field :email, label: "E-mail *" %>
        <%= f.password_field :password, label: "Password *", help: "Must be at least 8 characters long" %>
        <%= f.password_field :password_confirmation, label: "Confirm Password *" %>
        <%= f.file_field :logo, label: "Company Logo", help: "Not required. You can always add at a later time." %>
        <%= f.url_field :url, :value => "http://", label: "Company Website", help: "e.g. http://www.google.com" %>
        <%= f.text_area :bio, label: "Company Bio" %>
        <%= f.submit "Sign-Up" %><%= link_to 'Go Home', root_path, class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>
