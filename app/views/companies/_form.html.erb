<%= form_for(@company) do |f| %>
  <%= bootstrap_form_for(@company) do |f| %>
    <%= f.text_field :name ,help: "Enter the company's name that you represent." %>
    <%= f.email_field :email %>
    <%= f.password_field :password, help: "Must be at least 8 characters long" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Sign-Up" %>
  <% end %>
<% end %>
